<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.jspmvc2.mybatis.mapper.MVCBoardMapper">
    <select id="selectCount" parameterType="map" resultType="int">
        select count(*)
        from mvcboard
        <if test="searchWord != null and !searchWord.equals('')">
            where
            <choose>
                <when test="searchField == 'title'">
                    title like concat('%', #{searchWord}, '%')
                </when>
                <otherwise>
                    content like concat('%', #{searchWord}, '%')
                </otherwise>
            </choose>
        </if>
    </select>

    <select id="selectListPage" parameterType="map" resultType="com.example.jspmvc2.dto.MVCBoardDTO">
        SELECT *
        FROM mvcboard
        <if test="searchWord != null and !searchWord.equals('')">
            WHERE
            <choose>
                <when test="searchField == 'title'">
                    title like concat('%', #{searchWord}, '%')
                </when>
                <otherwise>
                    content like concat('%', #{searchWord}, '%')
                </otherwise>
            </choose>
        </if>
    </select>

    <insert id="insertWrite" parameterType="com.example.jspmvc2.dto.MVCBoardDTO">
        INSERT
        INTO mvcboard(idx, name, title, content, ofile, sfile, pass)
        VALUES(#{idx}, #{name}, #{title}, #{content}, #{ofile}, #{sfile}, #{pass})
    </insert>
</mapper>