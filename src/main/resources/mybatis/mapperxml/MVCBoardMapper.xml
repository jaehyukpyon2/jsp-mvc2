<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.jspmvc2.mybatis.mapper.MVCBoardMapper">
    <select id="selectCount" parameterType="map" resultType="int">
        select count(*)
        from board
        <if test="searchWord != null and !searchWord.equals('')">
            where
            <choose>
                <when test="searchField == 'title'">
                    title like concat('%', #{searchWord}, '%')
                </when>
                <otherwise>
                    content like concat('%', #{searchWord}, '%')
                </otherwise>
            </choose>
        </if>
    </select>

    <select id="selectListWithSearchField" parameterType="map" resultType="model1.board.BoardDTO">
        select *
        from board
        <if test="searchWord != null and !searchWord.equals('')">
            where
            <choose>
                <when test="searchField == 'title'">
                    title like concat('%', #{searchWord}, '%')
                </when>
                <otherwise>
                    content like concat('%', #{searchWord}, '%')
                </otherwise>
            </choose>
        </if>
    </select>

    <insert id="insertWrite" parameterType="model1.board.BoardDTO">
        insert
        into board(title, content, id, visitcount)
        values(#{title}, #{content}, #{id}, 0)
    </insert>

    <select id="selectView" resultType="model1.board.BoardDTO">
        select b.*, m.name
        from board b inner join member m
            on b.id = m.id
        where num = #{num}
    </select>

    <update id="updateVisitCount">
        update board
        set visitcount = visitcount + 1
        where num = #{num}
    </update>

    <update id="updateEdit" parameterType="model1.board.BoardDTO">
        update board
        set title = #{title}, content = #{content}
        where num = #{num}
    </update>
</mapper>